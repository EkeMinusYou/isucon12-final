[Unit]
Description=isuconquest.go

[Service]
WorkingDirectory=/home/isucon/webapp/go
EnvironmentFile=/home/isucon/env
Environment=GOOGLE_CLOUD_PROJECT=isucon-406018
PIDFile=/home/isucon/webapp/go/server.pid

User=isucon
Group=isucon
ExecStart=/home/isucon/.x /home/isucon/webapp/go/isuconquest -cpuprofile cpu.pprof -fcpuprofile fcpu.pprof
ExecStop=/bin/kill -s QUIT $MAINPID

Restart   = always
Type      = simple

[Install]
WantedBy=multi-user.target
